{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/utils", "app/(pages)/details/movie/[id]/page.jsx", "app/components/Card.jsx", "app/components/DetailBanner.jsx", "app/components/Recomended.jsx", "app/components/TopRated.jsx", "app/components/HeroBanner.jsx", "app/page.jsx"],
  "exclude": ["node_modules"]
}
